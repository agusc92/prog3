package tp2.recursividad;

public class Convertir_a_binario {

	public static void main(String[] args) {
		
		int resto = 577%2;
		
		System.out.println(convertirABinario(10));
	}

	public static int convertirABinario(int numero){
		String resultado= "";
		
		resultado += funcionamiento(numero,"");
		
		return Integer.parseInt(resultado);
	}
	
	public static String funcionamiento(int numero,String resultado ) {
		if(numero>1) {
			resultado += funcionamiento(numero/2,resultado);
			return String.valueOf(numero%2);
		}else {
			return "1";
		}
		
		
	}
}

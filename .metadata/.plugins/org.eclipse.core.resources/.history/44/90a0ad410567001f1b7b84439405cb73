	public static int convertirABinario(int numero){
		String resultado= "";
		
		funcionamiento(numero,"");
		System.out.println(resultado);
		return Integer.parseInt(resultado);
	}
	
	public static void funcionamiento(int numero,String resultado ) {
		if(numero>1) {
			resultado += String.valueOf(numero%2);
			 funcionamiento(numero/2,resultado);
			
		}else {
			
		}
		
		
	}
}
